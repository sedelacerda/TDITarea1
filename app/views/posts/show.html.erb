<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Descent:</strong>
  <%= @post.descent %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= form_for(Comment.new, :url => post_comments_path(@post)) do |f| %>
<div class="field">
  <%= f.label :author %>
  <%= f.text_field :author %>
</div>
<div class="field">
  <%= f.label :content %>
  <%= f.text_field :content %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>


<% @comments.each do |comment| %>
  <br/>
  <strong> <%= comment.author %> </strong> - <%= comment.created_at.strftime("%d/%m/%Y a las %H:%M") %>
  </br>
  <%= comment.content %>
<% end %>

<br/>
<br/>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
