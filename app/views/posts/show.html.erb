<p id="notice"><%= notice %></p>

<strong> <h1> <%= @post.title %> </h1> </strong>

<h3> <%= @post.descent %> </h3>

<%= @post.body %>

</br>
</br>

<%= form_for(Comment.new, :url => post_comments_path(@post)) do |f| %>
<div class="field">
  <%= f.label :autor %>
  <%= f.text_field :author, :required => true %>
</div>
<div class="field">
  <%= f.label :mensaje %>
  <%= f.text_field :content, :required => true %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>

<% @comments.each do |comment| %>
  </br>
  <strong> <%= comment.author %> </strong> - <%= comment.created_at.strftime("%d/%m/%Y a las %H:%M") %>
  </br>
  <%= comment.content %>
  </br>
<% end %>

<br/>
<br/>
<%= link_to 'Editar', edit_post_path(@post) %> |
<a href="javascript:history.back()">Volver</a>
